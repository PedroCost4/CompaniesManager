generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.sqlite"
}

model Admin {
  id    String  @id @default(cuid())
  email String  @unique
  name  String?
}

model Company {
  id           String   @id @default(cuid())
  name         String
  logo         String?
  businessType String
  active       Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  offices      Office[]
}

model Office {
  id        String  @id @default(cuid())
  name      String
  company   Company @relation(fields: [companyId], references: [id], onDelete: Cascade)
  companyId String
}
